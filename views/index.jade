extends layout
block content
	div#content
		h1= title
		div#game
		if (logged == true)
			p Escolha um jogador da lista
			div#userList
			ul
			each user in userList
				li 
					a#requester(href="#", onclick="return GameInterface.requestplay(this)", rel=user._id) #{user.username}
		div
			if (logged == true)
			canvas#velha(height="300", width="300") Canvas n√£o habilitado em seu navegador
			input(type="button", value="novo", onclick="javascript:clearBoard()")
		div(style="float:right")
			a(href="/logout") Sair
		script(src='javascripts/gameinterface.js')
